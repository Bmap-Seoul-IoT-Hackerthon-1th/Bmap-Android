                            android:fontFamily="@font/pretendard_semi_bold"
                            android:text="혼잡"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="26sp"
                            app:layout_constraintBottom_toBottomOf="@+id/fourth_lot_state_iv"
